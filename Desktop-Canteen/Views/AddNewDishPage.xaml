<Page x:Class="Desktop_Canteen.Views.AddNewDishPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:viewModels="clr-namespace:Desktop_Canteen.ViewModels"
      xmlns:local="clr-namespace:Desktop_Canteen.Views"
      mc:Ignorable="d"
      Title="AddNewDishPage" Height="450" Width="800">
    <Page.DataContext>
        <viewModels:AddNewDishVM />
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.65*" />
            <ColumnDefinition Width="0.35*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.9*" />
        </Grid.RowDefinitions>
        <Rectangle Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="{StaticResource BackgroundColor}" Offset="0" />
                    <GradientStop Color="{StaticResource LightBackgroundColor}" Offset="0.5" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Grid ColumnSpan="2">
            <DockPanel>
                <Button Width="120" Style="{StaticResource Transparent}">
                    <Viewbox>
                        <Image Source="/Resources/AppIcon.png" Stretch="Uniform" />
                    </Viewbox>
                </Button>
                <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Меню"
                        Click="ToMenuButtonClick" />
                <Button Padding="10" Style="{StaticResource SelectedMainMenuButton}" Content="Все блюда"
                        Click="ToAllDishesButtonClick" />
                <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Заказ продуктов"
                        Click="ToOrderingIngredientsButtonClick" />
                <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Расписание"
                        Click="ToScheduleButtonClick" />
                <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Школьники"
                        Click="ToChildrensButtonClick" />

                <Button DockPanel.Dock="Right" Style="{StaticResource Transparent}" HorizontalAlignment="Right"
                        Height="40" Width="40" Margin="0,0,10,0">
                    <materialDesign:PackIcon Kind="AccountCircle" />
                </Button>

                <Button DockPanel.Dock="Right" Style="{StaticResource Transparent}" HorizontalAlignment="Right"
                        Height="30" Width="30" Margin="0,0,0,0">
                    <ContentControl Content="{StaticResource BellIcon}" />
                </Button>
            </DockPanel>
        </Grid>

        <Grid Row="1" Margin="20, 25, 20, 0">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="0, 10" Height="25">
                    <TextBlock Style="{StaticResource DefaultText}" Text="Название:" VerticalAlignment="Center" />
                    <TextBox Margin="10,0,0,0" Text="{Binding Name}" TextWrapping="Wrap" Width="300"
                             d:LayoutOverrides="Height" Style="{DynamicResource TextBoxWithDescriptionInCanteenApp}"
                             ToolTip="Введите название" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0, 10" Height="25">
                    <TextBlock Style="{StaticResource DefaultText}" Text="Состав:" VerticalAlignment="Center" />
                    <TextBox Margin="10,0,0,0" Text="{Binding Discription}" TextWrapping="Wrap" Width="320"
                             d:LayoutOverrides="Height" Style="{DynamicResource TextBoxWithDescriptionInCanteenApp}"
                             ToolTip="Введите состав" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0, 10" Height="25">
                    <TextBlock Style="{StaticResource DefaultText}" Text="Граммовка:" VerticalAlignment="Center" />
                    <TextBox Margin="10,0,0,0" Text="{Binding Weight}" TextWrapping="Wrap" Width="290"
                             d:LayoutOverrides="Height" Style="{DynamicResource TextBoxWithDescriptionInCanteenApp}"
                             ToolTip="Введите значение в граммах" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0, 10" Height="25">
                    <TextBlock Style="{StaticResource DefaultText}" Text="Цена:" VerticalAlignment="Center" />
                    <TextBox Margin="10,0,0,0" Text="{Binding Cost}" TextWrapping="Wrap" Width="200"
                             d:LayoutOverrides="Height" Style="{DynamicResource TextBoxWithDescriptionInCanteenApp}"
                             ToolTip="Введите цену" />
                </StackPanel>
                <StackPanel Orientation="Vertical" Name="Ingredients">
                    <StackPanel Orientation="Horizontal" Margin="0, 30, 0, 5" Height="25">
                        <TextBlock Style="{StaticResource DefaultText}" Text="Продукты:" VerticalAlignment="Center" />
                        <ComboBox Margin="10,0,0,0" Padding="5" Text="" Width="300" ItemsSource="{Binding Ingredients}"
                                  DisplayMemberPath="Name"
                                  d:LayoutOverrides="Height" BorderBrush="{StaticResource MediumGreenBrush}"
                                  BorderThickness="1.5"
                                  ToolTip="Выберите продукт и граммовку" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0, 5, 20, 0" Height="25" HorizontalAlignment="Center">
                    <Button Style="{StaticResource BaseButton}" Height="20" Width="20" Content="+"
                            Foreground="{StaticResource DarkGrayBrush}" FontSize="10" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0, 10" Height="25">
                    <TextBlock Style="{StaticResource DefaultText}" Text="Фото:" VerticalAlignment="Center" />
                    <Button Style="{StaticResource BaseButton}" Margin="10, 0, 0, 0" Height="25" Width="120"
                            Content="Загрузить" FontSize="12" Foreground="{StaticResource DarkGrayBrush}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0" Height="40">
                    <Button Command="{Binding AddCommand}" Style="{StaticResource BaseButton}" Height="35" Width="100"
                            Content="Сохранить" FontSize="15" Foreground="{StaticResource DarkGrayBrush}" />
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Row="1" Column="1" Margin="5, 25">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource BaseButton}" Margin="10" Height="100" Width="60" VerticalAlignment="Top"
                        Content="Завтрак" FontSize="10" />
                <Button Style="{StaticResource BaseButton}" Margin="10" Height="100" Width="60" VerticalAlignment="Top"
                        Content="Обед" FontSize="10" />
                <Button Style="{StaticResource BaseButton}" Margin="10" Height="100" Width="60" VerticalAlignment="Top"
                        Content="Полдник" FontSize="10" />
            </StackPanel>

        </Grid>
    </Grid>
</Page>