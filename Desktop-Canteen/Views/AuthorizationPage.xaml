<Page x:Class="Desktop_Canteen.Views.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:viewModels="clr-namespace:Desktop_Canteen.ViewModels"
      xmlns:local="clr-namespace:Desktop_Canteen.Views"
      mc:Ignorable="d"
      Title="AuthorizationPage" Height="450" Width="800">
    <Page.DataContext>
        <viewModels:AuthorizationVM />
    </Page.DataContext>
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.35*"/>
            <RowDefinition Height="0.55*"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.RowSpan="2">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="{StaticResource BackgroundColor}" Offset="0"/>
                    <GradientStop Color="{StaticResource LightBackgroundColor}" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Viewbox Grid.Row="0" Margin="0, 25, 0, 10" VerticalAlignment="Center">
            <Image Source="/Resources/AppIconBig.png" />
        </Viewbox>
        
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="20" Width="350"
                    VerticalAlignment="Top" Height="200">
            <Grid Height="50">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.3*"/>
                    <RowDefinition Height="0.7*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Viewbox Grid.RowSpan="2" Margin="5" VerticalAlignment="Bottom">
                    <md:PackIcon Kind="AccountKeyOutline" />
                </Viewbox>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Логин" Margin="10, 0" Style="{StaticResource DefaultText}" FontWeight="Normal" FontSize="13" VerticalAlignment="Top"/>
                <TextBox Text="{Binding Login}" Grid.Row="1" Grid.Column="1" Width="300" Padding="5" FontSize="17"/>
            </Grid>
            
            <Grid Height="50" Margin="0, 20, 0, 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.3*"/>
                    <RowDefinition Height="0.7*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Viewbox Grid.RowSpan="2" Margin="5" VerticalAlignment="Bottom">
                    <md:PackIcon Kind="KeyOutline"/>
                </Viewbox>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Пароль" Margin="10, 0" Style="{StaticResource DefaultText}" FontWeight="Normal" FontSize="13" VerticalAlignment="Top"/>
                <TextBox Text="{Binding Password}" Grid.Row="1" Grid.Column="1" Width="300" Padding="5" FontSize="17"/>
            </Grid>
            <Button Margin="0, 50" Style="{StaticResource BaseButton}" Width="100" Height="30" 
                    Content="Войти" FontSize="15" Click="EnterButtonClick"/>
        </StackPanel>
    </Grid>
</Page>
