<Page x:Class="Desktop_Canteen.Views.AllDishesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:viewModels="clr-namespace:Desktop_Canteen.ViewModels"
      xmlns:local="clr-namespace:Desktop_Canteen.Views"
      mc:Ignorable="d"
      Title="AllDishesPage" Height="450" Width="800">
    <Page.DataContext>
        <viewModels:AllDishesPage />
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="0.7*" />
        </Grid.RowDefinitions>
        <Grid>
            <DockPanel>
                <Button Width="120" Style="{StaticResource Transparent}">
                    <Viewbox>
                        <Image Source="/Resources/AppIcon.png" Stretch="Uniform"/>
                    </Viewbox>
                </Button>
                <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Меню"
                        Click="ToMenuButtonClick" />
                <Button Padding="10" Style="{StaticResource SelectedMainMenuButton}" Content="Все блюда" />
                <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Заказ продуктов"
                        Click="ToOrderingIngredientsButtonClick" />
                <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Расписание"
                        Click="ToScheduleButtonClick" />
                <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Школьники"
                        Click="ToChildrensButtonClick" />

                <Button DockPanel.Dock="Right" Style="{StaticResource Transparent}" HorizontalAlignment="Right"
                        Height="40" Width="40" Margin="0,0,10,0">
                    <materialDesign:PackIcon Kind="AccountCircle" />
                </Button>

                <Button DockPanel.Dock="Right" Style="{StaticResource Transparent}" HorizontalAlignment="Right"
                        Height="30" Width="30" Margin="0,0,0,0">
                    <ContentControl Content="{StaticResource BellIcon}" />
                </Button>
            </DockPanel>
        </Grid>
        <Grid Row="1">
            <Button  Width="200" Height="50" HorizontalAlignment="Right"
                    Content="Добавить блюдо" Click="ToAddNewDishButtonClick"/>
        </Grid>
        <Grid Row="2">
            <ListBox ItemsSource="{Binding Dishes}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                        
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource GreenBrush}" BorderBrush="{StaticResource DarkGreenBrush}" BorderThickness="2,1,3,4" CornerRadius="30,0,0,0">
                        <Grid  Width="240" Height="130" materialDesign:ShadowAssist.ShadowEdges="All">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.05*"/>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="0.05*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.05*"/>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="0.05*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Style="{StaticResource Heading}"  Text="{Binding Name}"></TextBlock>
                                <TextBlock Grid.Column="1" Grid.Row="2" Text="Калории: " />
                                <TextBlock Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right"  Text="{Binding Calories}" />
                                <TextBlock Grid.Column="1" Grid.Row="3" Text="Вес" />
                                <TextBlock Grid.Column="1" Grid.Row="3" HorizontalAlignment="Right" Text="{Binding Weight}" />
                                <TextBlock Grid.Column="1" Grid.Row="4" Text="Цена" />
                                <TextBlock Grid.Column="1" Grid.Row="4" HorizontalAlignment="Right" Text="{Binding Cost}" />
                            </Grid>
                          </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>

</Page>