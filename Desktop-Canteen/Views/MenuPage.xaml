<Page x:Class="Desktop_Canteen.Views.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Desktop_Canteen.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Title="MenuPage">
    <ScrollViewer>
        <Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="95" />
                    <RowDefinition Height="130" />
                    <RowDefinition Height="200" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Rectangle Grid.RowSpan="3">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="{StaticResource BackgroundColor}" Offset="0" />
                            <GradientStop Color="{StaticResource LightBackgroundColor}" Offset="0.5" />
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Grid>
                    <DockPanel Margin="30, 20, 30 , 0">
                        <Button Width="180" Margin="0, 0, 10, 0" Style="{StaticResource Transparent}">
                            <Viewbox>
                                <Image Source="/Resources/AppIcon.png" Stretch="Uniform" />
                            </Viewbox>
                        </Button>
                        <Button Padding="10" Style="{StaticResource SelectedMainMenuButton}" Content="Меню" />
                        <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Все блюда"
                                Click="ToAllDishesButtonClick" />
                        <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Заказ продуктов"
                                Click="ToOrderingIngredientsButtonClick" />
                        <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Расписание"
                                Click="ToScheduleButtonClick" />
                        <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Школьники"
                                Click="ToChildrensButtonClick" />

                        <Button DockPanel.Dock="Right" Style="{StaticResource Transparent}" HorizontalAlignment="Right"
                                Height="60" Width="60" Margin="0,0,10,0">
                            <materialDesign:PackIcon Kind="Circle" Height="60" Width="60" />
                        </Button>

                        <Button DockPanel.Dock="Right" Style="{StaticResource Transparent}" HorizontalAlignment="Right"
                                Height="60" Width="60" Margin="0,0,15,0">
                            <materialDesign:PackIcon Kind="BellOutline" Height="30" Width="30" />
                        </Button>
                    </DockPanel>
                </Grid>

                <Grid VerticalAlignment="Top" Row="1" Height="130" Margin="10, 0">
                    <Grid Margin="20, 10,10, 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="25" />
                            <RowDefinition Height="60" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.08*" />
                            <ColumnDefinition Width="0.08*" />
                            <ColumnDefinition Width="0.08*" />
                            <ColumnDefinition Width="0.08*" />
                            <ColumnDefinition Width="0.08*" />
                            <ColumnDefinition Width="0.6*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.ColumnSpan="2" Style="{StaticResource DefaultText}"
                                   Text="Сентябрь" HorizontalAlignment="Left" Margin="0, 0, 0, 10"
                                   Foreground="{StaticResource GrayBrush}" FontWeight="Normal"  />

                        <Viewbox Grid.Row="0" Grid.Column="1" Margin="0, 0, 0, 0" HorizontalAlignment="Right"
                                 Height="30" Width="30" VerticalAlignment="Top">
                            <materialDesign:PackIcon Kind="CalendarMonth" Foreground="{StaticResource DarkGreenBrush}" />
                        </Viewbox>

                        <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource DefaultText}"
                                   Width="35" TextAlignment="Center" Text="26" Margin="2, 0, 0, 0"
                                   Foreground="{StaticResource GreenBrush}" HorizontalAlignment="Left" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource DefaultText}"
                                   Width="35" TextAlignment="Center" Text="27" Margin="2, 0, 0, 0"
                                   Foreground="{StaticResource GreenBrush}" HorizontalAlignment="Left" />
                        <TextBlock Grid.Row="1" Grid.Column="2" Style="{StaticResource DefaultText}"
                                   Width="35" TextAlignment="Center" Text="28" Margin="2, 0, 0, 0"
                                   Foreground="{StaticResource GreenBrush}" HorizontalAlignment="Left" />
                        <TextBlock Grid.Row="1" Grid.Column="3" Style="{StaticResource DefaultText}"
                                   Width="35" TextAlignment="Center" Text="29" Margin="2, 0, 0, 0"
                                   Foreground="{StaticResource GreenBrush}" HorizontalAlignment="Left" />
                        <TextBlock Grid.Row="1" Grid.Column="4" Style="{StaticResource DefaultText}"
                                   Width="35" TextAlignment="Center" Text="30" Margin="2, 0, 0, 0"
                                   Foreground="{StaticResource GreenBrush}" HorizontalAlignment="Left" />

                        <TextBlock Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4"
                                   Background="{StaticResource GreenBrush}"
                                   Height="3" Margin="0" VerticalAlignment="Center" Opacity="0.3" />

                        <Button Grid.Column="0" Grid.Row="2" Style="{StaticResource CircleButton}" Content="ПН"
                                Margin="0, 10" HorizontalAlignment="Left" Click="ChangeStyleCircleButton" />
                        <Button Grid.Column="1" Grid.Row="2" Style="{StaticResource CircleButton}" Content="ВТ"
                                Margin="0, 10" HorizontalAlignment="Left" Click="ChangeStyleCircleButton" />
                        <Button Grid.Column="2" Grid.Row="2" Style="{StaticResource CircleButton}" Content="СР"
                                Margin="0, 10" HorizontalAlignment="Left" Click="ChangeStyleCircleButton" />
                        <Button Grid.Column="3" Grid.Row="2" Style="{StaticResource CircleButton}" Content="ЧТ"
                                Margin="0, 10" HorizontalAlignment="Left" Click="ChangeStyleCircleButton" />
                        <Button Grid.Column="4" Grid.Row="2" Style="{StaticResource CircleButton}" Content="ПТ"
                                Margin="0, 10" HorizontalAlignment="Left" Click="ChangeStyleCircleButton" />


                        <Grid Row="1" RowSpan="2" Column="5" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                            <TextBox Margin="5,0,5,10" Width="500" Height="50" Text="" TextWrapping="Wrap"
                                     d:LayoutOverrides="Height"
                                     Style="{DynamicResource TextBoxWithDescriptionInCanteenApp}"
                                     ToolTip="Поиск блюд" Padding="20" />
                        </Grid>
                    </Grid>
                </Grid>
                <Grid Row="2" Height="200" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Button Name="BreakfastButton" Style="{StaticResource TypeMealButton}"
                                Width="100" Height="150"
                                Click="BreakfastButtonClick"
                                Margin="20, 10, 10, 0">
                            <Grid VerticalAlignment="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.6*" />
                                    <RowDefinition Height="0.4*" />
                                </Grid.RowDefinitions>
                                <Viewbox Margin="0, -20, 0, 0" Grid.Row="0" VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="Circle" Height="80" Width="80" />
                                </Viewbox>
                                <TextBlock Grid.Row="1" Text="Завтрак" HorizontalAlignment="Center" />
                            </Grid>
                        </Button>
                        <Button Name="DinnerButton" Style="{StaticResource TypeMealButton}"
                                Width="100" Height="150"
                                Click="DinnerButtonClick"
                                Margin="20, 10, 10, 0">
                            <Grid VerticalAlignment="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.6*" />
                                    <RowDefinition Height="0.4*" />
                                </Grid.RowDefinitions>
                                <Viewbox Margin="0, -20, 0, 0" Grid.Row="0" VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="Circle" Height="80" Width="80" />
                                </Viewbox>
                                <TextBlock Grid.Row="1" Text="Обед" HorizontalAlignment="Center" />
                            </Grid>
                        </Button>
                        <Button Name="AfternoonSnackButton" Style="{StaticResource TypeMealButton}"
                                Width="100" Height="150"
                                Click="AfternoonSnackButtonClick"
                                Margin="20, 10, 10, 0">
                            <Grid VerticalAlignment="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.6*" />
                                    <RowDefinition Height="0.4*" />
                                </Grid.RowDefinitions>
                                <Viewbox Margin="0, -20, 0, 0" Grid.Row="0" VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="Circle" Height="80" Width="80" />
                                </Viewbox>
                                <TextBlock Grid.Row="1" Text="Полдник" HorizontalAlignment="Center" />
                            </Grid>
                        </Button>
                    </StackPanel>
                </Grid>
                
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>