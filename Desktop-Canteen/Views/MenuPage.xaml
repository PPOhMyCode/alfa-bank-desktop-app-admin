<Page x:Class="Desktop_Canteen.Views.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Desktop_Canteen.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Title="MenuPage">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="0.4*" />
                <RowDefinition Height="0.5*" />
            </Grid.RowDefinitions>
            <Rectangle Grid.RowSpan="3">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="{StaticResource BackgroundColor}" Offset="0"/>
                        <GradientStop Color="{StaticResource LightBackgroundColor}" Offset="0.5"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Grid>
                <DockPanel Margin="30, 0">
                    <Button Width="180" Margin="0, 0, 10, 0" Style="{StaticResource Transparent}">
                        <Viewbox>
                            <Image Source="/Resources/AppIcon.png" Stretch="Uniform"/>
                        </Viewbox>
                    </Button>
                    <Button Padding="10" Style="{StaticResource SelectedMainMenuButton}" Content="Меню" />
                    <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Все блюда"
                            Click="ToAllDishesButtonClick"/>
                    <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Заказ продуктов"
                            Click="ToOrderingIngredientsButtonClick" />
                    <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Расписание" 
                            Click="ToScheduleButtonClick"/>
                    <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Школьники"
                            Click="ToChildrensButtonClick"/>

                    <Button DockPanel.Dock="Right" Style="{StaticResource Transparent}" HorizontalAlignment="Right"
                            Height="60" Width="60" Margin="0,0,10,0">
                        <materialDesign:PackIcon Kind="Circle" Height="60" Width="60"/>
                    </Button>
                
                    <Button DockPanel.Dock="Right" Style="{StaticResource Transparent}" HorizontalAlignment="Right"
                            Height="60" Width="60" Margin="0,0,15,0">
                        <materialDesign:PackIcon Kind="BellOutline" Height="30" Width="30"/>
                    </Button>
                </DockPanel>
            </Grid>

            <Grid Row="1">
                <Grid Margin="20, 10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.15*" />
                        <RowDefinition Height="0.20*" />
                        <RowDefinition Height="0.25*" />
                        <RowDefinition Height="0.45*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*" />
                        <ColumnDefinition Width="0.5*" />
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <TextBlock Style="{StaticResource DefaultText}" Text="Сентябрь" HorizontalAlignment="Left"
                                Foreground="{StaticResource GreenBrush}" FontWeight="Bold" />
                    </Grid>
                    <Grid Row="1">
                        <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                            <TextBlock Style="{StaticResource DefaultText}" FontSize="20"
                                       Width="35" FontWeight="DemiBold" TextAlignment="Center" Text="26"
                                       Foreground="{StaticResource GreenBrush}" />
                            <TextBlock Style="{StaticResource DefaultText}" FontSize="20"
                                       Width="45" FontWeight="DemiBold" TextAlignment="Center" Text="27"
                                       Foreground="{StaticResource GreenBrush}" />
                            <TextBlock Style="{StaticResource DefaultText}" FontSize="20"
                                       Width="35" FontWeight="DemiBold" TextAlignment="Center" Text="28"
                                       Foreground="{StaticResource GreenBrush}" />
                            <TextBlock Style="{StaticResource DefaultText}" FontSize="20"
                                       Width="45" FontWeight="DemiBold" TextAlignment="Center" Text="29"
                                       Foreground="{StaticResource GreenBrush}" />
                            <TextBlock Style="{StaticResource DefaultText}" FontSize="20"
                                       Width="35" FontWeight="DemiBold" TextAlignment="Center" Text="30"
                                       Foreground="{StaticResource GreenBrush}" />
                        </StackPanel>
                    </Grid>
                    <Grid Row="2" Margin="0">
                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource CircleButton}" Content="ПН"
                                    Margin="0, 0, 5, 0"/>
                            <Button Style="{StaticResource CircleButton}" Content="ВТ"
                                    Margin="0, 0, 5, 0"/>
                            <Button Style="{StaticResource CircleButton}" Content="СР"
                                    Margin="0, 0, 5, 0"/>
                            <Button Style="{StaticResource CircleButton}" Content="ЧТ"
                                    Margin="0, 0, 5, 0"/>
                            <Button Style="{StaticResource CircleButton}" Content="ПТ"
                                    Margin="0"/>
                        </StackPanel>
                    </Grid>
                    <Grid Row="2" RowSpan="1" Column="1">
                        <TextBox Margin="5,0,0,0" Width="240" Height="30" Text="" TextWrapping="Wrap"
                                 d:LayoutOverrides="Height" Style="{DynamicResource TextBoxWithDescription}"
                                 ToolTip="Поиск блюд" />
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
