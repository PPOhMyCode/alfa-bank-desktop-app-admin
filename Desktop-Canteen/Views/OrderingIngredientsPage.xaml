            <Grid Row="2">
                <ScrollViewer>
                    <Grid Margin="25, 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.6*" />
                            <ColumnDefinition Width="0.2*" />
                            <ColumnDefinition Width="0.2*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.ColumnSpan="2"
                                VerticalAlignment="Top"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="2" Height="57" CornerRadius="10">
                            <Rectangle Margin="1"
                                       Fill="{StaticResource Ultra2LightGreenBrush}"
                                       RadiusX="10" RadiusY="10">
                            </Rectangle>
                        </Border>


                        <DataGrid x:Name="DataGrid"
                                  Background="Transparent"
                                  Foreground="{StaticResource DarkGrayBrush}"
                                  FontSize="20"
                                  GridLinesVisibility="None"
                                  CanUserAddRows="False"
                                  CanUserReorderColumns="False"
                                  ItemsSource="{Binding SummaryOrderViews}"
                                  AutoGenerateColumns="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Название" Width="0.25*"
                                                    Binding="{Binding  SystemDish.Name}" />
                                <DataGridTextColumn Header="Заявки" Width="0.25*" Binding="{Binding CountOrders}" />
                                <DataGridTemplateColumn Header="Продукты" Width="0.25*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ListView ItemsSource="{Binding Ingredients}"
                                                      IsEnabled="False">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Ingredient.Name}" />
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
