<Page x:Class="Desktop_Canteen.Views.OrderingIngredientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Desktop_Canteen.Views"
      xmlns:viewModels="clr-namespace:Desktop_Canteen.ViewModels"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:desktopCanteen="clr-namespace:Desktop_Canteen"
      mc:Ignorable="d"
      Title="OrderingIngredientsPage" Height="450" Width="800">
    <Page.DataContext>
        <viewModels:OrderingIngredientsVM />
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="0.65*" />
        </Grid.RowDefinitions>
        <Grid>
            <DockPanel>
                <Button Width="120" Style="{StaticResource Transparent}">
                    <Viewbox>
                        <Image Source="/Resources/AppIcon.png" Stretch="Uniform"/>
                    </Viewbox>
                </Button>
                <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Меню"
                        Click="ToMenuButtonClick" />
                <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Все блюда"
                        Click="ToAllDishesButtonClick" />
                <Button Padding="10" Style="{StaticResource SelectedMainMenuButton}" Content="Заказ продуктов" />
                <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Расписание"
                        Click="ToScheduleButtonClick" />
                <Button Padding="10" Style="{StaticResource MainMenuButton}" Content="Школьники"
                        Click="ToChildrensButtonClick" />

                <Button DockPanel.Dock="Right" Style="{StaticResource Transparent}" HorizontalAlignment="Right"
                        Height="40" Width="40" Margin="0,0,10,0">
                    <materialDesign:PackIcon Kind="AccountCircle" />
                </Button>

                <Button DockPanel.Dock="Right" Style="{StaticResource Transparent}" HorizontalAlignment="Right"
                        Height="30" Width="30" Margin="0,0,0,0">
                    <ContentControl Content="{StaticResource BellIcon}" />
                </Button>
            </DockPanel>
        </Grid>

        <Grid Row="1">
            <Grid Margin="20, 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.3*" />
                    <RowDefinition Height="0.5*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>
                <Grid>
                    <Button Style="{StaticResource Transparent}" Content="Сентябрь" HorizontalAlignment="Left"
                            Foreground="{StaticResource GreenBrush}" FontWeight="Bold" />
                </Grid>
                <Grid Row="1">
                    <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                        <TextBlock Width="35" FontWeight="DemiBold" TextAlignment="Center" Text="26"
                                   Foreground="{StaticResource GreenBrush}" />
                        <TextBlock Width="35" FontWeight="DemiBold" TextAlignment="Center" Text="27"
                                   Foreground="{StaticResource GreenBrush}" />
                        <TextBlock Width="35" FontWeight="DemiBold" TextAlignment="Center" Text="28"
                                   Foreground="{StaticResource GreenBrush}" />
                        <TextBlock Width="35" FontWeight="DemiBold" TextAlignment="Center" Text="29"
                                   Foreground="{StaticResource GreenBrush}" />
                        <TextBlock Width="35" FontWeight="DemiBold" TextAlignment="Center" Text="30"
                                   Foreground="{StaticResource GreenBrush}" />
                    </StackPanel>
                </Grid>
                <Grid Row="2" Margin="0">
                    <StackPanel Orientation="Horizontal">
                        <Button Style="{StaticResource Transparent}" HorizontalAlignment="Right"
                                Height="35" Width="35" Margin="0, 0">
                            <materialDesign:PackIcon Kind="CircleOutline" Height="30" Width="30"
                                                     Foreground="{StaticResource GreenBrush}" />
                        </Button>
                        <Button Style="{StaticResource Transparent}" HorizontalAlignment="Right"
                                Height="35" Width="35" Margin="0, 0">
                            <materialDesign:PackIcon Kind="CircleOutline" Height="30" Width="30"
                                                     Foreground="{StaticResource GreenBrush}" />
                        </Button>
                        <Button Style="{StaticResource Transparent}" HorizontalAlignment="Right"
                                Height="35" Width="35" Margin="0, 0">
                            <materialDesign:PackIcon Kind="CircleOutline" Height="30" Width="30"
                                                     Foreground="{StaticResource GreenBrush}" />
                        </Button>
                        <Button Style="{StaticResource Transparent}" HorizontalAlignment="Right"
                                Height="35" Width="35" Margin="0, 0">
                            <materialDesign:PackIcon Kind="CircleOutline" Height="30" Width="30"
                                                     Foreground="{StaticResource GreenBrush}" />
                        </Button>
                        <Button Style="{StaticResource Transparent}" HorizontalAlignment="Right"
                                Height="35" Width="35" Margin="0, 0">
                            <materialDesign:PackIcon Kind="CircleOutline" Height="30" Width="30"
                                                     Foreground="{StaticResource GreenBrush}" />
                        </Button>

                    </StackPanel>
                </Grid>

            </Grid>
        </Grid>
        <Grid Row="2">
            <ScrollViewer>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*" />
                        <ColumnDefinition Width="0.2*" />
                        <ColumnDefinition Width="0.2*" />
                    </Grid.ColumnDefinitions>


                    <DataGrid x:Name="DataGrid"
                              Background="Transparent"
                              Foreground="{StaticResource DarkGrayBrush}"
                              GridLinesVisibility="None"
                              CanUserAddRows="False"
                              CanUserReorderColumns="False"
                              ItemsSource="{Binding SummaryOrderViews}"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Width="0.25*" Binding="{Binding  Dish.Name}" />
                            <DataGridTextColumn Header="Заявки" Width="0.25*" Binding="{Binding CountOrders}" />
                            <DataGridTemplateColumn Header="Продукты" Width="0.25*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ListView ItemsSource="{Binding Ingredients}">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Ingredient.Name}" />
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!-- <DataGridTemplateColumn Header="Значение" Width="0.25*"> -->
                            <!--     <DataGridTemplateColumn.CellTemplate> -->
                            <!--         <DataTemplate> -->
                            <!--             <ListView ItemsSource="{Binding }"> -->
                            <!--                 <ListView.ItemTemplate> -->
                            <!--                     <DataTemplate> -->
                            <!--                         <TextBlock Text="{Binding }" /> -->
                            <!--                     </DataTemplate> -->
                            <!--                 </ListView.ItemTemplate> -->
                            <!--             </ListView> -->
                            <!--         </DataTemplate> -->
                            <!--     </DataGridTemplateColumn.CellTemplate> -->
                            <!-- </DataGridTemplateColumn> -->
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <DataGrid Grid.Column="1"
                              Background="Transparent"
                              Foreground="{StaticResource DarkGrayBrush}"
                              GridLinesVisibility="None"
                              CanUserAddRows="False"
                              CanUserReorderColumns="False"
                              ItemsSource="{Binding Values}"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <!-- <DataGridTextColumn Header="Значение" Binding="{Binding }" /> -->
                            
                            <DataGridTemplateColumn Header="Значение">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ListView ItemsSource="{Binding }">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding }" />
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                </Grid>
            </ScrollViewer>
        </Grid>

    </Grid>
</Page>