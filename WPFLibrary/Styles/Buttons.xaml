    <Style TargetType="Button" x:Key="CircleDeleteDishButton">
        <Setter Property="Height" Value="45" />
        <Setter Property="Width" Value="45" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid HorizontalAlignment="Center">
                        <Ellipse
                            Fill="{StaticResource LightTextBrush}"
                            Height="50"
                            Stretch="Uniform"
                            Width="50"
                            x:Name="Ellipse" />

                        <Rectangle
                            Height="30"
                            Width="30"
                            x:Name="imageColor">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="{StaticResource TrashIconColor}" x:Name="ColorBrush" />
                            </Rectangle.Fill>
                            <Rectangle.OpacityMask>
                                <ImageBrush ImageSource="pack://application:,,,/Desktop-Canteen;component/Resources/TrashCanOutline.png" />
                            </Rectangle.OpacityMask>
                        </Rectangle>

                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsDefaulted" Value="True">
                            <Setter Property="Fill" TargetName="Ellipse" Value="{StaticResource LightTextBrush}" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <!-- <Setter TargetName="imageColor" Property="Fill" Value="{StaticResource IsMouseOverTrashIconColor}"/> -->
                            <Setter Property="Fill" TargetName="Ellipse" Value="{StaticResource IsMouthOverDeleteCircleBackgroundBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <!-- <Setter TargetName="imageColor" Property="Fill" Value="{StaticResource IsDisableTrashIconColor}"/> -->
                            <Setter Property="Fill" TargetName="Ellipse" Value="{StaticResource IsDisableDeleteCircleBackgroundBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

